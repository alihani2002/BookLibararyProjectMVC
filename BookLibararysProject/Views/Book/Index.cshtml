@model IEnumerable<Book>

@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid p-5 my-5 border text-center">
    <p>
        <a asp-action="Create" class="btn btn-primary"> + Add New</a>
    </p>

    <h1> - List of books -</h1>
   
 </div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoverPhoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOfTheMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)<span> EGP</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISBN)
                </td>
                <td>
                    <img src="@item.CoverPhoto" style="width:75px; height:100px;">
                </td>
                <td>
                    @if (item.IsOfTheMonth)
                    {
                        <span style="color:green">Yes</span>
                    }
                    else
                    {
                        <span style="color:red">No</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>  
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>  
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
